# Build the docker image with `npx nx docker-build ez-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t ez-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system ez-api && \
          adduser --system -G ez-api ez-api

COPY dist/apps/ez-api ez-api
RUN chown -R ez-api:ez-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix ez-api --omit=dev -f install

CMD [ "node", "ez-api" ]
